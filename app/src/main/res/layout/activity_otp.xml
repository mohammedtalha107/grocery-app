<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".otp">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Verification OTP "
        android:textColor="@color/light"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="91dp"
        android:text="A 6 digit otp has been sent to your phone"
        android:textColor="@color/light"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/otppass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/otppass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"

        android:layout_marginTop="206dp"
        android:layout_marginEnd="55dp"
        android:backgroundTint="@color/light"
        android:hint="6 DIGIT OTP"
        android:textAlignment="center"
        android:textColor="@color/light"
        android:textColorHint="@color/light"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/verify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/buttonstyle"
        android:text="verify"
        android:textColor="@color/colorAccent"
        android:textSize="15dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/resend"
        app:layout_constraintEnd_toStartOf="@+id/resend"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/resend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="189dp"
        android:background="@drawable/buttonstyle"
        android:text="resend"
        android:textColor="@color/colorAccent"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/verify" />

</androidx.constraintlayout.widget.ConstraintLayout>